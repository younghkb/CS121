   <SearchView
       android:id="@+id/bookQueryBox"
       android:layout_height="wrap_content"
       android:hint="@string/book_info"
       android:inputType="textNoSuggestions"
       android:lines="2"
       android:layout_width="fill_parent">

       <ListView
           android:id="@+id/booksFound"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
       </ListView>

   </SearchView>

    <Spinner
        android:id="@+id/SpinnerOfferLoan"
        android:layout_height="@dimen/abc_text_size_display_3_material"
        android:prompt="@string/choose_loan_type"
        android:layout_width="fill_parent"
        android:entries="@array/offer_or_loan">
    </Spinner>

